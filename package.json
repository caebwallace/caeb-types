{
    "name": "caeb-types",
    "version": "1.0.6",
    "description": "Apps Interfaces by Caeb Wallace",
    "main": "dist/index.js",
    "scripts": {
        "build": "yarn run format && yarn run lint && yarn run build:clean:before && tsc --project tsconfig.build.json --skipLibCheck && yarn run doc",
        "build:clean:before": "rimraf ./dist",
        "build:clean:after": "rimraf ./dist/__mocks__",
        "test": "jest --verbose",
        "test:watch": "jest --watchAll",
        "format": "prettier --write \"src/**/*.{ts,json}\"",
        "lint": "npx eslint ./src --ext .js,.jsx,.ts,.tsx",
        "prepare": "husky install",
        "doc:clean": "rimraf ./docs && typedoc",
        "doc": "yarn run doc:clean && typedoc",
        "build:publish": "npm --no-git-tag-version version patch && npm run build && npm publish"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:caebwallace/caeb-types.git"
    },
    "keywords": [
        "CAEB",
        "binance",
        "ftx",
        "kucoin",
        "dca",
        "bot",
        "crypto"
    ],
    "author": "Caeb WALLACE",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@trivago/prettier-plugin-sort-imports": "^2.0.4",
        "@types/crypto-js": "^4.1.1",
        "@types/node": "^10.12.18",
        "@types/pino": "^6.3.11",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "branch-name-lint": "^2.1.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.2",
        "jest": "^27.2.0",
        "jest-config": "^27.2.0",
        "prettier": "^2.4.1",
        "ts-jest": "^27.0.5",
        "ts-node-dev": "^1.1.8",
        "tsc-alias": "^1.5.0",
        "tsc-watch": "^4.6.0",
        "tsconfig-paths": "^3.11.0",
        "typedoc": "^0.22.3",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "crypto-js": "^4.1.1",
        "dotenv-defaults": "^3.0.0",
        "ethers": "^5.5.4",
        "lodash": "^4.17.21",
        "pino": "^7.11.0",
        "pino-pretty": "^7.6.1"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "npm run lint",
            "git add",
            "npm test ."
        ]
    }
}
